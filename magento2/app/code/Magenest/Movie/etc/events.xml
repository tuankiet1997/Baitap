<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_save_after_data_object">
        <observer name="upgrade_customer" instance="Magenest\Movie\Observer\UpgradeCustomerObserver"/>
    </event>
    <event name="admin_system_config_changed_section_setting">
        <observer name="custom_admin_system_config_changed_section_setting" instance="Magenest\Movie\Observer\ConfigObserver"/>
    </event>

    <event name="controller_action_movie_save_after">
        <observer name="custom_admin_controller_action_movie_save_after" instance="Magenest\Movie\Observer\MovieObserver"/>
    </event>

    <event name="customer_register_success">
        <observer name="bss_email_customer_register" instance="Magenest\Movie\Observer\CustomerRegisterObserver"/>
    </event>

    <event name="sales_order_place_after">
        <observer name="send_available_store_order_items" instance="Magenest\Movie\Observer\AfterPlaceOrderObserver" />
    </event>
</config>
